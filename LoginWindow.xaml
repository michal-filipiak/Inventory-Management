<Window x:Class="Inventory_Management.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory_Management"
        mc:Ignorable="d"
        Title="Inventory Management" Height="450" Width="800">
    
    <StackPanel Orientation ="Vertical" Margin="100" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100">
        <TextBox Text="Login" HorizontalContentAlignment="Center" BorderThickness="0 0 0 1" Margin="0 0 0 5"/>
        <TextBox Text="Password" HorizontalContentAlignment="Center" BorderThickness="0 0 0 1" Margin="0 0 0 15"/>
        <Button Click="LoginButton_Click" FontWeight="DemiBold">Login</Button>
    </StackPanel >
</Window>
